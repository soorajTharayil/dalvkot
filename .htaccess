# Enable Rewrite Engine
RewriteEngine On

# Force index.php handling (CodeIgniter/Laravel style)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L]

# Security: Disable directory listing
Options -Indexes

# Security: Block .env and other sensitive files
<FilesMatch "^\.env">
    Order allow,deny
    Deny from all
</FilesMatch>

